    "import:clean": "node -r esm ./bin/clean.js",
    "import:zotero": "node -r esm ./bin/import.js zotero https://api.zotero.org/groups/2198702/items",
    "import:spire": "node -r esm ./bin/import.js spire http://spire.sciencespo.fr/dissemination/oaipmh2-no-prefix-publications.xml?verb=ListRecords\\&set=SCIENCESPO:DIME-SHS\\&metadataPrefix=oai_dc",
    "postinstall": "npm run postinstall:tachyons",
